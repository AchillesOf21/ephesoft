<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:core='urn:import:com.ephesoft.dcma.gwt.core.client.view'>

	<ui:style>
		.border {
			border-bottom: 1px solid #92c1f0;
		}
	</ui:style>

	<g:DockLayoutPanel unit="PCT">
		<g:north size='13'>
			<core:Header ui:field="header" />
		</g:north>
		<g:center>
			<g:DockLayoutPanel>
				<g:north size="3">
					<g:Label></g:Label>
				</g:north>
				<g:west size="3">
					<g:Label></g:Label>
				</g:west>
				<g:center>
					<g:Panel ui:field="body" styleName='{style.border}' />
				</g:center>
				<g:south size="3">
					<g:Label></g:Label>
				</g:south>
			</g:DockLayoutPanel>
		</g:center>
		<g:south size="3">
			<core:Footer ui:field="footer" width="100%" />
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder>