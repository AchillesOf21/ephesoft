<!DOCTYPE ui:UiBinder 
  SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"
>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:core='urn:import:com.ephesoft.dcma.gwt.core.client.view'>

	<ui:style>
		.tabBorder {
			border-bottom-color: #92c1f0;
			border-bottom-style: solid;
		}
	</ui:style>


	<g:DockLayoutPanel height="100%" unit="PCT">
		<g:north size="50">
			<g:FocusPanel height="100%" width="100%">
				<g:HorizontalPanel ui:field="signoutPanel" width="98%"
					height="100%" horizontalAlignment="ALIGN_CENTER">
					<g:cell width='10%'>
						<g:Label ui:field="logo" />
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_TOP"
						width="70%">
						<g:Label ui:field='userName' />
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_TOP">
						<g:Anchor href='javascript:;' ui:field='signOutLink'></g:Anchor>
					</g:cell>
				</g:HorizontalPanel>
			</g:FocusPanel>
		</g:north>
		<g:center>
			<g:FocusPanel height='100%' width='100%'>
				<g:HorizontalPanel width="100%" height="100%">
					<g:cell verticalAlignment="ALIGN_TOP" horizontalAlignment="ALIGN_LEFT"
						width="100%" height="100%">
						<g:TabBar ui:field="tabBar" />
					</g:cell>
				</g:HorizontalPanel>
			</g:FocusPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
