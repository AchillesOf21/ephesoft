<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:email='urn:import:com.ephesoft.dcma.gwt.admin.bm.client.view.batchclassfield'
	xmlns:b="urn:import:com.ephesoft.dcma.gwt.admin.bm.client.view.functionkey">

	<g:DockLayoutPanel unit='PCT'>
		<g:north size="43">
			<g:CaptionPanel ui:field="functionKeyCaptionPanel"
				height="90%" width="97%">
				<g:ScrollPanel height="100%" width="100%">
					<g:VerticalPanel height="100%" width="100%">
						<g:VerticalPanel ui:field="functionKeyVerticalPanel"
							height="100%" width="100%">
							<b:FunctionKeyDetailView
								ui:field="functionKeyDetailView" width='100%' height="100%" />
							<g:HorizontalPanel width="100%">
								<g:cell width="100%" horizontalAlignment="ALIGN_RIGHT">
									<g:Button ui:field="editFunctionKeyPropertiesButton"></g:Button>
								</g:cell>
							</g:HorizontalPanel>
						</g:VerticalPanel>
						<g:VerticalPanel ui:field="functionKeyConfigVerticalPanel"
							height="100%" visible="false" width="100%">
							<b:EditFunctionKeyView ui:field="editFunctionKeyView"
								width='100%' />
						</g:VerticalPanel>
					</g:VerticalPanel>
				</g:ScrollPanel>
			</g:CaptionPanel>
		</g:north>
	</g:DockLayoutPanel>
</ui:UiBinder>
