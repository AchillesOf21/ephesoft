<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<g:VerticalPanel width="100%" ui:field="editKVPPTypeViewPanel">
		<g:ScrollPanel height="7em" width="100%">
			<g:VerticalPanel width="100%" spacing="4">
				<g:HorizontalPanel width="100%">
					<g:cell width="30%" horizontalAlignment="ALIGN_RIGHT">
						<g:Label ui:field="keyPatternLabel"></g:Label>
					</g:cell>
					<g:cell width="1%">
						<g:Label ui:field="keyPatternStar"></g:Label>
					</g:cell>
					<g:cell width="16%" horizontalAlignment="ALIGN_LEFT">
						<g:TextBox ui:field="keyPattern" />
					</g:cell>
					<g:cell width="4%">
						<g:Label></g:Label>
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_LEFT">
						<g:Button ui:field="keyPatternValidateButton" />
					</g:cell>
				</g:HorizontalPanel>

				<g:HorizontalPanel width="100%">
					<g:cell width="30%" horizontalAlignment="ALIGN_RIGHT">
						<g:Label ui:field="valuePatternLabel"></g:Label>
					</g:cell>
					<g:cell width="1%">
						<g:Label ui:field="valuePatternStar"></g:Label>
					</g:cell>
					<g:cell width="16%" horizontalAlignment="ALIGN_LEFT">
						<g:TextBox ui:field="valuePattern" />
					</g:cell>
					<g:cell width="4%">
						<g:Label></g:Label>
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_LEFT">
						<g:Button ui:field="valuePatternValidateButton" />
					</g:cell>
				</g:HorizontalPanel>

				<g:HorizontalPanel width="100%">
					<g:cell width="30%" horizontalAlignment="ALIGN_RIGHT">
						<g:Label ui:field="locationLabel"></g:Label>
					</g:cell>
					<g:cell width="1%">
						<g:Label ui:field="locationStar"></g:Label>
					</g:cell>
					<g:cell width="70%" horizontalAlignment="ALIGN_LEFT">
						<g:ListBox ui:field="location" />
					</g:cell>
				</g:HorizontalPanel>

				<g:HorizontalPanel width="100%">
					<g:cell width="30%" horizontalAlignment="ALIGN_RIGHT">
						<g:Label ui:field="noOfWordsLabel"></g:Label>
					</g:cell>
					<g:cell width="1%">
						<g:Label ui:field="noOfWordsStar"></g:Label>
					</g:cell>
					<g:cell width="70%" horizontalAlignment="ALIGN_LEFT">
						<g:TextBox ui:field="noOfWords" />
					</g:cell>
				</g:HorizontalPanel>

				<g:HorizontalPanel width="100%">
					<g:cell width="30%" horizontalAlignment="ALIGN_RIGHT">
						<g:Label ui:field="pageLevelFieldNameLabel"></g:Label>
					</g:cell>
					<g:cell width="1%">
						<g:Label ui:field="pageLevelFieldNameStar"></g:Label>
					</g:cell>
					<g:cell width="70%" horizontalAlignment="ALIGN_LEFT">
						<g:TextBox ui:field="pageLevelFieldName" />
					</g:cell>
				</g:HorizontalPanel>

			</g:VerticalPanel>
		</g:ScrollPanel>
		<g:HorizontalPanel ui:field="editKVPanel">
			<g:cell width="78%" horizontalAlignment="ALIGN_RIGHT">
				<g:Button ui:field="saveButton" />
			</g:cell>
			<g:cell width="1%">
				<g:Label></g:Label>
			</g:cell>
			<g:cell width="1%">
				<g:Button ui:field="cancelButton" />
			</g:cell>
			<g:cell width="1%">
				<g:Label></g:Label>
			</g:cell>
			<g:cell width="13%">
				<g:Button ui:field="samplePatternButton" />
			</g:cell>
		</g:HorizontalPanel>

	</g:VerticalPanel>
</ui:UiBinder>
