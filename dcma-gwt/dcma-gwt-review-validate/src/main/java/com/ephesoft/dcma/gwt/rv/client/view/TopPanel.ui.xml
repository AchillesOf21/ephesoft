<!DOCTYPE ui:UiBinder 
  SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"
>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:mail='urn:import:com.ephesoft.dcma.gwt.rv.client.view'>

	<ui:image field='logo' src='logo.png' />

	<g:FocusPanel width='99.4%' height='100%'>
		<g:HorizontalPanel ui:field="topHorizontalPanel"
			width="100%" height="100%" spacing="3">
			<g:cell width="4%" horizontalAlignment='ALIGN_CENTER'>
				<g:Label ui:field="batchIdText"></g:Label>
			</g:cell>
			<g:cell width="4%" horizontalAlignment='ALIGN_LEFT'>
				<g:Label ui:field="batchId"></g:Label>
			</g:cell>
			<g:cell width="11%" horizontalAlignment='ALIGN_LEFT'>
				<g:Anchor href='javascript:;' ui:field='nextBatch'></g:Anchor>
			</g:cell>
			<g:cell width="11%" horizontalAlignment='ALIGN_RIGHT'>
				<g:Anchor href='javascript:;' ui:field='saveBatch'></g:Anchor>
			</g:cell>
			<g:cell width="1%" horizontalAlignment="ALIGN_RIGHT">
				<g:Label ui:field="secondPipe"></g:Label>
			</g:cell>
			<g:cell width="10%" horizontalAlignment='ALIGN_RIGHT'>
				<g:Label ui:field="batchNameText"></g:Label>
			</g:cell>
			<g:cell width="10%" horizontalAlignment='ALIGN_LEFT'>
				<g:Label ui:field="batchName"></g:Label>
			</g:cell>
			<g:cell width="11%" horizontalAlignment='ALIGN_RIGHT'>
				<g:Label ui:field="batchClassNameText"></g:Label>
			</g:cell>
			<g:cell width="18%" horizontalAlignment='ALIGN_LEFT'>
				<g:Label ui:field="batchClassName"></g:Label>
			</g:cell>
			<g:cell width="1%" horizontalAlignment="ALIGN_RIGHT">
				<g:Label ui:field="pipe"></g:Label>
			</g:cell>
			<g:cell width="2%" horizontalAlignment='ALIGN_RIGHT'>
				<g:Anchor href='javascript:;' ui:field='info'></g:Anchor>
			</g:cell>
		</g:HorizontalPanel>
	</g:FocusPanel>

</ui:UiBinder>
