<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:email='urn:import:com.ephesoft.dcma.gwt.admin.bm.client.view.email'>

	<g:DockLayoutPanel unit='PCT'>
		<g:north size="43">
			<g:CaptionPanel ui:field="emailConfigurationCaptionPanel"
				height="90%" width="97%">
				<g:VerticalPanel height="100%" width="100%">
					<g:VerticalPanel ui:field="emailVerticalPanel"
						height="100%" width="100%">
						<email:EmailDetailView ui:field="emailDetailView"
							width='100%' height="100%" />
					</g:VerticalPanel>
					<g:VerticalPanel ui:field="emailConfigVerticalPanel"
						height="100%" visible="false" width="100%">
						<email:EditEmailView ui:field="editEmailView"
							width='100%' />
					</g:VerticalPanel>
				</g:VerticalPanel>
			</g:CaptionPanel>
		</g:north>
	</g:DockLayoutPanel>
</ui:UiBinder>
