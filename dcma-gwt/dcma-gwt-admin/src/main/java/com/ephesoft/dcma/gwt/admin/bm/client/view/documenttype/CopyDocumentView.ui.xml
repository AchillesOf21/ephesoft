<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:core='com.ephesoft.dcma.gwt.core.client.validator'
	xmlns:v="urn:import:com.ephesoft.dcma.gwt.core.client.validator">

	<g:VerticalPanel width="100%" ui:field="editDocumentViewPanel">

		<g:HorizontalPanel width="100%">
			<g:cell width="29%" horizontalAlignment="ALIGN_RIGHT">
				<g:Label ui:field="nameLabel"></g:Label>
			</g:cell>
			<g:cell width="3%">
				<g:Label ui:field="nameStar"></g:Label>
			</g:cell>
			<g:cell width="68%" horizontalAlignment="ALIGN_LEFT">
				<g:TextBox ui:field="name" width="60%" />
			</g:cell>
		</g:HorizontalPanel>

		<g:HorizontalPanel width="100%">
			<g:cell width="29%" horizontalAlignment="ALIGN_RIGHT">
				<g:Label ui:field="descLabel"></g:Label>
			</g:cell>
			<g:cell width="3%">
				<g:Label ui:field="descStar"></g:Label>
			</g:cell>
			<g:cell width="68%" horizontalAlignment="ALIGN_LEFT">
				<g:TextBox ui:field="description" width="60%" />
			</g:cell>
		</g:HorizontalPanel>

		<g:HorizontalPanel width="100%">
			<g:cell width="29%" horizontalAlignment="ALIGN_RIGHT">
				<g:Label ui:field="minConfidenceThresholdLabel"></g:Label>
			</g:cell>
			<g:cell width="3%">
				<g:Label ui:field="minConfidenceThresholdStar"></g:Label>
			</g:cell>
			<g:cell width="68%" horizontalAlignment="ALIGN_LEFT">
				<g:TextBox ui:field="minConfidenceThreshold" width="60%"
					maxLength='3' />
			</g:cell>
		</g:HorizontalPanel>

		<g:HorizontalPanel width="100%" ui:field="editDocumentPanel">
			<g:cell width="50%" horizontalAlignment="ALIGN_RIGHT">
				<g:Button ui:field="saveButton" />
			</g:cell>
			<g:cell width="50%" horizontalAlignment="ALIGN_LEFT">
				<g:Button ui:field="cancelButton" />
			</g:cell>
		</g:HorizontalPanel>

	</g:VerticalPanel>
</ui:UiBinder>
