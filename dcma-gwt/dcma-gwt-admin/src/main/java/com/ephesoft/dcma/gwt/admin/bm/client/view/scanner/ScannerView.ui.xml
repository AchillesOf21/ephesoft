<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:scanner='urn:import:com.ephesoft.dcma.gwt.admin.bm.client.view.scanner'>

	<g:DockLayoutPanel unit='PCT'>
		<g:north size="43">
			<g:CaptionPanel ui:field="scannerConfigurationCaptionPanel"
				height="90%" width="97%">
					<g:VerticalPanel height="100%" width="100%">
						<g:VerticalPanel visible="false" ui:field="scannerVerticalPanel"
							height="100%" width="100%">
							<scanner:ScannerDetailView ui:field="scannerDetailView"
								width='100%' height="100%" />
						</g:VerticalPanel>
						<g:VerticalPanel ui:field="scannerConfigVerticalPanel"
							height="100%" visible="false" width="100%">
							<scanner:EditScannerView ui:field="editScannerView"
								width='100%' />
						</g:VerticalPanel>
					</g:VerticalPanel>
			</g:CaptionPanel>
		</g:north>
	</g:DockLayoutPanel>
</ui:UiBinder>
